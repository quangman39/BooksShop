@model Company
<form asp-controller="company" asp-action="upsert" method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border rounded p-3">
        <div class="row pb-2 ">

            <h2> @(Model.Id != 0 ? "Update" : "Create")</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-10 border rounded ">
                <div class="pt-3">
                    <label asp-for="Name" class="pb-2"></label>
                    <input asp-for="Name" class="form-control" />
                    <span class="text-danger mt-2" asp-validation-for="Name"></span>
                </div>
                <div class="pt-3">
                    <label asp-for="City" class="pb-2"></label>
                    <input asp-for="City" class="form-control" />
                    <span class="text-danger mt-2" asp-validation-for="City"></span>

                </div>
                <div class="pt-3">
                    <label asp-for="StreetAddress" class="pb-2"></label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <span class="text-danger mt-2" asp-validation-for="StreetAddress"></span>

                </div>
                <div class="pt-3">
                    <label asp-for="PostalCode" class="pb-2"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span class="text-danger mt-2" asp-validation-for="PostalCode"></span>
                </div>
                <div class="pt-3">
                    <label asp-for="PhoneNumber" class="pb-2"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span class="text-danger mt-2" asp-validation-for="PhoneNumber"></span>

                </div>
                <div class="pt-3">
                    <label asp-for="State" class="pb-2"></label>
                    <input asp-for="State" class="form-control" />
                    <span class="text-danger mt-2" asp-validation-for="State"></span>

                </div>
                <div class="row pt-3 pb-3">
                    <div class="col-2">
                        <button type="submit" class="btn btn btn-dark form-control"> @(Model.Id != 0 ? "Update" : "Create")</button>
                    </div>
                    <div class="col-2">
                        <a class="btn border form-control" asp-controller="company" asp-action="index"> BACK TO LIST</a>
                    </div>
                </div>

            </div>


        </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidatorPartial" />
    }
}























