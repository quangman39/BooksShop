@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2" >
                <div class="col-12 p-1">
                    <div class="card border-0 border-secondary p-3 shadow border-top border-5 rounded">
                        <img  src="@product.image" class="card-img-top rounded"/>
                        <div class="card-body ">
                            <div class="px-1">
                                <p class="text-center h5 opacity-75 text-uppercase text-dark card-title "> @product.Title</p>
                                <p class="text-center card-title  "> By <b>@product.Author</b>
                                    </p>
                            </div>
                            <div class=" px-1">
                                <p class="text-center text-opacity-75 text-dark mb-0"> Price :
                                    <span class="text-decoration-line-through">@product.Price.ToString("c")</span>
                                </p>
                            </div>
                            <div>
                                <p class="text-center card-title text-dark mb-0 text-opacity-75 ">
                                    As Low as :
                                    <span>@product.Price100.ToString("c")</span>
                                </p>
                             </div>
                        </div>
                        <div>
                            <a asp-area ="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-secondary bg-gradient form-control ">Details </a>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    }
</div>